<%- include('../partials/header', { title: 'Payment Failed' }) %>

<div
	class="container"
	style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%)">
	<div class="card">
		<div class="icon" style="color: #e74c3c">‚ùå</div>
		<h1>Payment Failed</h1>
		<p>Unfortunately, your payment could not be completed.</p>

		<% if (reason) { %>
		<div class="details-box">
			<div class="detail-row">
				<span class="label">Reason:</span>
				<span class="value"><%= reason %></span>
			</div>
		</div>
		<% } %>

		<div class="info-list">
			<p style="font-weight: 600; margin-bottom: 15px">Possible reasons:</p>
			<ul>
				<li>Payment was cancelled by user</li>
				<li>Insufficient balance in eSewa account</li>
				<li>Transaction timeout or session expired</li>
				<li>Network connectivity issues</li>
				<li>Invalid payment details</li>
			</ul>
		</div>

		<p style="margin: 20px 0">
			Don't worry! Your order is still saved and you can try payment again.
		</p>

		<div
			style="
				display: flex;
				gap: 15px;
				justify-content: center;
				flex-wrap: wrap;
			">
			<a href="/api/orders" class="btn btn-primary">View My Orders</a>
		</div>

		<p style="margin-top: 30px; font-size: 14px; color: #999">
			Need help? Contact our support team.
		</p>
	</div>
</div>

<%- include('../partials/footer') %>
